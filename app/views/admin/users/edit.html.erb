<div class="mainbox col-md-6">
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title">Update Account</div>
    </div>

    <div class="panel-body new-user" id="create-user">
      <%= form_for [:admin, @user], :html => {:class => "form-horizontal center"} do |f| %>
        <div class="form-group">
          <%= label_tag :username, "Username", class: "control-label col-md-4 required-field" %>
          <%= f.text_field :username, value: @user.username, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email", class: "control-label col-md-4 required-field" %>
          <%= f.text_field :email, value: @user.email, class: "input-md tf.text_fieldtinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :cellphone, "Cell Number", class: "control-label col-md-4 required-field" %>
          <%= f.text_field :cellphone, value: @user.cellphone, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password, "Password", class: "control-label col-md-4 required-field" %>
          <%= f.password_field :password, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirm Password", class: "control-label col-md-4 required-field" %>
          <%= f.password_field :password_confirmation, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Update Account", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
