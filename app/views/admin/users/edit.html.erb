<div class="mainbox col-md-6">
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title">Update Account</div>
    </div>
    <div class="panel-body new-user" id="update-user">
      <%= form_for [:admin, @user] do |f| %>
        Username: <%= f.text_field :username %><br />
        Email:    <%= f.text_field :email %><br />
        Cellphone: <%= f.text_field :cellphone %><br />
        Password: <%= f.password_field :password %><br />
        Password Confirmation: <%= f.password_field :password_confirmation %><br />
        <%= f.submit "Update Account", method: :put, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
