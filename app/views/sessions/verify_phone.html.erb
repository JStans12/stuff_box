<div class="mainbox col-md-6 col-md-offset-3">
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title">Login</div>
    </div>

    <div class="panel-body new-user">
      <%= form_tag "/verify_phone" do  %>
        <div class="form-group">
          <%= label_tag :verification_code, "Verification Code", class: "control-label col-md-4 required-field" %>
          <%= text_field_tag :verification_code, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Verify", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
