<% if @view == nil %>
  <div class="col-md-6 col-md-offset-3">
<% else %> 
  <div class="col-md-3 col-md-offset-1"> 
<% end %>
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title">Update Username</div>
    </div>

    <div class="panel-body new-user">
      <div class="col-md-6 center col-md-offset-3">
        <%= link_to "Update Password", update_path(view: 'password'), class: 'btn btn-primary' %>
      </div>
        <div class="form-group">
          <%= label_tag :current_password, "Current Password", class: "control-label col-md-4 required-field" %>
          <%= password_field_tag :current_password, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= link_to "Update Username", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

