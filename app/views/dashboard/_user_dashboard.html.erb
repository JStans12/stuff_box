

  <div class="mainbox col-md-3 col-md-offset-1">

    <div class="panel panel-info">
      <div class="panel-heading">
          <div class="panel-title">Personal Folders</div>
      </div>

      <div class="panel-body">
        <div class='personal-folders-panel'>
          <div class='col-md-12'>
            <div class='new-folder-box'>
              <%= link_to "Create a New Folder", new_folder_path, class: 'new-folder-link' %>
              <a href='/folders/new' %><span class="glyphicon glyphicon-folder-open"></span></a>
            </div>
          </div>

          <div class='col-md-12 folder-view-nav'>
            <div class="float-left">Current Folder</div>
            <div class='float-right'>
              <a href='/up'><span class="glyphicon glyphicon-level-up"></span></a>
                <%= link_to "Root Folder", root_folder_path, class: 'root-folder-link' %> 
              <a href='/up'><span class="glyphicon glyphicon-level-up"></span></a>
                <%= link_to "Parent Folder", up_path %>
            </div>
          </div>

          <div class='col-md-12'>
            <div class="float-left">/<%= current_folder.name %></div>
          </div>
          <div class='col-md-12'>
            <% current_folder.children.each do |folder| %>
              <ul>
                <li><%= link_to folder.name, current_folder_path(folder.id) %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-info">
      <div class="panel-heading">
          <div class="panel-title">Shared Folders</div>
      </div>

      <div class="panel-body">
        <div class='shared-folders-panel'>
          <div class='col-md-12'>
            <div class="float-left"><%= link_to "Home", root_folder_path, class: 'home-link' %></div>
            <div class='float-right'><%= link_to "Create a New Folder", new_folder_path, class: 'new-folder-link' %><a href='/folders/new' %><span class="glyphicon glyphicon-folder-open"></span></a></div>
          </div>
          <div class='col-md-12'>
            <div class="float-left">/<%= current_folder.name %></div>
            <div class='float-right'><a href='/up'><span class="glyphicon glyphicon-level-up"></span></a><%= link_to "Parent Folder", up_path %></div>
          </div>
          <div class='col-md-12'>
            <% current_folder.children.each do |folder| %>
              <ul>
                <li><%= link_to folder.name, current_folder_path(folder.id) %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>


  <div class="mainbox col-md-7">
    <div class="panel panel-info">

      <div class="panel-heading">
        <div class="panel-title">
          <% current_folder.path_to_folder.each do |folder| %>
            <%= link_to "#{folder.name} / ", current_folder_path(folder.id) %>
          <% end %>
        </div>
      </div>

      <div class="panel-body new-user">
        <div class='documents-panel'>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Document Name</th>
                <th>Kind</th>
                <th>Created At</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <% current_folder.children.each do |folder| %>
                  <td>
                    <%= link_to folder.name, current_folder_path(folder.id) %>
                  </td>
                  <td>
                      <p>Folder</p>
                  </td>
                  <td>
                      <p><%= folder.created_at %></p>
                  </td>
                <% end %>
              <!--  uploads.each do |upload|
                  <td>
                     <p>uploads.type_of_file</p>
                  </td>
                  <td>
                    <p>upload.created_at</p>
                  </td>
                end -->
              </tr>
              <tr>
                <td>Mary</td>
                <td>Moe</td>
                <td>mary@example.com</td>
              </tr>
              <tr>
                <td>July</td>
                <td>Dooley</td>
                <td>july@example.com</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>


<div class= "col-md-3">
  <h4>Folders</h4>

  <h5><%= current_folder.name %></h5>

  <% current_folder.path_to_folder.each do |folder| %>
    <%= link_to "#{folder.name} / ", current_folder_path(folder.id) %>
  <% end %>
  <br>
  <br>

  <% current_folder.children.each do |folder| %>
    <%= link_to folder.name, current_folder_path(folder.id) %>
  <% end %>
  <br>
  <%= link_to "Parent Folder", up_path %>
  <br>
  <%= link_to "Root", root_folder_path %>
  <br>
  <%= link_to "New Folder", new_folder_path %>

  <h1>Upload a file</h1>

  <%= form_tag uploads_path, enctype: 'multipart/form-data' do %>
  	<%= file_field_tag :file  %>
  	<%= submit_tag 'Upload file' %>
  <% end %>
</div>

