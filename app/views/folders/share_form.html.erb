<div class="mainbox col-md-6 col-md-offset-3">
  <div class="panel panel-info">

    <div class="panel-heading">
      <div class="panel-title">Share folder: <%= current_folder.name %></div>
    </div>

    <div class="panel-body new-user">
      <%= form_tag "/share" do  %>
        <div class="form-group">
          <%= label_tag :username, "User", class: "control-label col-md-4 required-field" %>
          <%= text_field_tag :username, "", class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Share", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
